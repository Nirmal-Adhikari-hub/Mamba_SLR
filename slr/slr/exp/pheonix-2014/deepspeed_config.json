{
  "train_batch_size": 4,
  "train_micro_batch_size_per_gpu": 2,
  "steps_per_print": 1000,
  "optimizer": {
    "type": "Adam",
    "adam_w_mode": true,
    "params": {
      "lr": 0.001,
      "weight_decay": 0.05,
      "bias_correction": true,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-08
    }
  },
  "fp16": {
    "enabled": false,
    "loss_scale": 0,
    "initial_scale_power": 16,
    "loss_scale_window": 500,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "bf16": {
    "enabled": true
  },
  "gradient_clipping": 5.0
}